{% extends 'security/base_security.html.twig' %}

{% block body %}
<h4>Mot de passe oubli√©</h4>
{% for label, messages in app.flashes %}
    {% if label=='notice' %}
        {% set label = 'success' %}
    {% endif %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<form class="pt-3" method="post">
    <div class="form-group">
        <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email" name="email" required autofocus>
    </div>

    <div class="mt-3">
        <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">
            Envoyer le mail
        </button>
    </div>
</form>
{% endblock %}